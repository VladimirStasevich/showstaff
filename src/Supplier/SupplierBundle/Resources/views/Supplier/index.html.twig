{% extends 'SupplierBundle::base.html.twig' %}

{% block body %}
	<div class="row-fluid">
	  <div class="span4">
		<h3>Продукты</h3>
		<table class="table table-bordered table-striped" id="product_list">
		 <thead>
		  <tr>
			<th>Название
				<a href="#" class="sort"><i class="icon-arrow-up"></i></a>
			</th>
			<th>Еденица</th>
		  </tr>
		  <tr id="add_row">
			<th colspan="2" class="add">
				<a href="#" id="add_product" class="create btn btn-small">Add new Product <i class="icon-plus-sign"></i></a>
				<p class="form-inline hide" id="form_add">
					<input name="name_add" type="text" class="input-small name_add">
					<select class="span1 unit_add" name="unit"></select>
					<a class="add_product btn btn-mini btn-success">add</a>
				</p>
			</th>
		  </tr>
		 </thead>
		</table>
	  </div>
	  <div class="span8">
		<h3>Поставщики</h3>
		<table class="table table-bordered table-striped" id="suppliers">
		</table>  
		
		<table class="table table-bordered table-striped" id="supplier_product_list">
		  <thead id="supplier_products_header">
			  <tr>
				<th>Название
					<a href="#" class=""><i class="icon-arrow-up"></i></a>
					<a href="#" class=""><i class="icon-arrow-down"></i></a>
				</th>
				<th>Цена
					<a href="#" class=""><i class="icon-arrow-up"></i></a>
					<a href="#" class=""><i class="icon-arrow-down"></i></a>
				</th>
				<th>Еденица</th>
				<th>Первичный
					<a href="#" class=""><i class="icon-arrow-up"></i></a>
					<a href="#" class=""><i class="icon-arrow-down"></i></a>
				</th>
			  </tr>
			  <tr>
				<th colspan="4" class="add_supplier_product">
					<a href="#" id="add_supplier_product" class="btn btn-small">Добавить продукт поставщика <i class="icon-plus-sign"></i></a>
					<p class="form-inline hide" id="form_add_supplier_product">
						<input name="name" type="text" class="input-small name_add_sp" placeholder="Supplier Product Name">
						<input name="price" type="text" class="input-small price_add_sp" placeholder="Supplier Price">
						
						<label class="checkbox">
							<input name="primary_supplier" type="checkbox" value="1" class="input-small primary_supplier_add_sp"> Первичный
						</label>
						<label>
							<select class="span1 supplier_product_add" name="product" placeholder="ILKAY"></select> Продукт
						</label>
						<label>
							<select class="span1 supplier_add" name="supplier"></select> Поставщик
						</label>
						<a class="add_supplier_product btn btn-mini btn-success">add</a>
					</p>
				</th>
			  </tr>
		  </thead>
		</table>
	  </div>
	</div>
<div class="alert hide alert-error"><button type="button" class="close" data-dismiss="alert">×</button>
	Ошибка<strong> (This value is already used)</strong>. Попробуйте еще раз или обратитесь к администратору.
</div>
<div class="alert alert-success hide"><button type="button" class="close" data-dismiss="alert">×</button>
	<strong>Продукт добавлен</strong>
</div>
<div class="progress progress-striped active hide" id="preloader">
  <div class="bar" style="width: 100%;"></div>
</div>
{% endblock %}
